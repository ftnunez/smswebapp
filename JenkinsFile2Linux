pipeline {
    agent {
        label 'LinuxAgentMultiple'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('SonarQube Analysis') {
            steps {
                def scannerHome = tool 'SonarScanner for .NET'
                withSonarQubeEnv() {
                  sh "dotnet ${scannerHome}/SonarScanner.MSBuild.dll begin /k:\"smsSonar\" /d:sonar.host.url=\"http://10.7.8.170:9000\" /d:sonar.token=\"sqp_141d22a718a4c3320b329ca7ed85ddb08cfd2fac\""
                  sh "dotnet build"
                  sh "dotnet ${scannerHome}/SonarScanner.MSBuild.dll end /d:sonar.token=\"sqp_141d22a718a4c3320b329ca7ed85ddb08cfd2fac\""
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Restoring dependencies
                    sh "dotnet restore"

                    // Building the application
                    sh "dotnet build --configuration Release"
                }
            }
        }

        

        stage('Test') {
            steps {
                script {
                    // Running tests
                    sh "dotnet test --no-restore --configuration Release"
                }
            }
        }

        stage('Publish') {
            steps {
                script {
                    // Publishing the application
                    sh "dotnet publish --no-restore --configuration Release --output ./publish"
                }
            }
        }
    }

    post {
        success {
            echo 'Build, test, and publish successful!'
        }
    }
}
